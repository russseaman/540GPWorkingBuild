@model IEnumerable<_540GPWorkingBuild.Models.Employee>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>
<p>Customer/Employee Management - <b>Written by Russ</b></p>
<h3>Requirements</h3>
<ul>
    <li>Create landing page based from mockup</li>
    <li>View, add, delete, and edit customers</li>
    <li>View, add, delete, and edit employees</li>
    <li>Access historical reports based on customer’s purchase history</li>
    <li>Reference SRS/Proposal/Mockups for complete guidelines and functionality</li>
</ul>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    <p>
        <input class="searchBox" type="text" id="CustIDSearch" placeholder="CustomerID">
        <input class="searchBox" type="text" id="PhoneNumSearch" placeholder="Phone Number">
    </p>
    <p>
        <input class="searchBox" type="text" id="FirstNameAuto" placeholder="First Name">
        <input class="searchBox" type="text" id="LastNameAuto" placeholder="Last Name">
    </p>
    @Html.ActionLink("Search", "Search")
</div>

<script>
    $(document).ready(function ()
    {
        $('$AutoComplete').autocomplete(
            {
                source.'@Url.Action("GetAutoComplete", "FirstNameAuto")'
            });
    })
</script>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HireDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeRole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeRole.EmpRole)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeRole.EmpRole)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
            </td>
        </tr>
    }

</table>
