@model IEnumerable<_540GPWorkingBuild.Models.Employee>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<div class="panel-heading">
    <h3>Employee Lookup</h3>
    <p>Lookup an employee by inputing one of the search fields below:</p>
</div>
<div class="panel-body">

    @using (Html.BeginForm("Index", "Employees", FormMethod.Get))
    {
        //the following are search options

        @Html.RadioButton("option", "EmployeeID")
        <text>Employee ID</text>
        @Html.RadioButton("option", "EmployeePhone")
        <text>Employee Phone Number</text>
        @Html.RadioButton("option", "EmpFirstName")
        <text>Employee First Name</text>
        @Html.RadioButton("option", "EmpLastName")
        <text>Employee Last Name</text>
        @Html.TextBox("search")

        <input type="submit" class="btn btn-info" name="submit" value="Search" />
    }

</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HireDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeRole.EmpRole)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeRole.EmpRole)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
            </td>
        </tr>
    }

</table>
